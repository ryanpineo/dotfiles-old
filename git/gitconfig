[user]
	name = Ryan Pineo
	email = ryanpineo@gmail.com
[core]
	autocrlf = false
	excludesfile = ~/.gitignore_global
	safecrlf = true
[alias]
	st = status
	ci = commit --verbose
	co = checkout
	di = diff
	dc = diff --cached
	amend = commit --amend
	aa = add --all
	ff = merge --ff-only
	pullff = pull --ff-only
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
	b = branch
[diff]
	tool = vimdiff
[push]
	default = simple
[difftool]
	prompt = false
[mergetool "fugitive"]
	cmd = vim -f -c \"Gdiff\" \"$MERGED\"
[merge]
	tool = fugitive
[github]
	user = RyanPineo
[init]
	templatedir = ~/.git_template
