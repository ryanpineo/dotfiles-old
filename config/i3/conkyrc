            {"full_text":"${else}"},\
            {"full_text":"${if_match ${wireless_link_qual_perc wlp2s0}<56}üåé ${wireless_link_qual_perc wlp2s0}% ${wireless_essid wlp2s0} ","color":"\#b58900"},\
            {"full_text":"${else}"},\
            {"full_text":"${if_match ${wireless_link_qual_perc wlp2s0}>=56}üåé ${wireless_link_qual_perc wlp2s0}% ${wireless_essid wlp2s0} ","color":"\#859900"},\
            {"full_text":"${else}"},\
            {"full_text":"${endif}${endif}${endif}"},\
        ${endif}
    ${else}
        {"full_text":"Offline","color":"\#dc322f"},\
    ${endif}


# volume in percentage
    # volume is unmuted
    ${if_match "${exec amixer get Master -M | grep -o "\[on]"}"=="[on]"}
        {"full_text":" ‚ô™ ${exec amixer get Master -M | grep -oE "[[:digit:]]*%"} ","color":"\#268bd2"},\
    # volume is muted
    ${else}
        {"full_text": " üîá 0% ", "color":"\#dc322f"},\
    ${endif}

# battery left in percentage | checks if AC is plugged in order to change the icon between AC and battery.
    ${if_existing /sys/class/power_supply/ADP1/online 0}
        {"full_text":" üîã ","color":"\"859900","separator":false,"separator_block_width":6},\
        {"full_text":"${if_match ${battery_percent BAT1}<20}${battery_percent BAT1}% ${battery_time BAT1}","color":"\#dc322f"},\
        {"full_text":"${else}"},\
