# Initial stuff
out_to_x no
own_window no
out_to_console yes
background no
max_text_width 0

# Update interval in seconds
update_interval 3

# The number of times Conky will update before quitting. 0 = forever
total_run_times 0

# Shorten unsits to single character ('G' instead of 'GiB')
short_units yes

# Add spaces to keep things from moving about?  This only affects certain objects.
# use_spacer should have an argument of left, right, or none
use_spacer left

# Force UTF8? note that UTF8 support required XFT
override_utf8_locale yes

# number of cpu samples to average
# set to 1 to disable averaging
cpu_avg_samples 2

# Less flickering.. hopefully..
double_buffer yes


# Stuff after 'TEXT' goes to the bar!
TEXT
[
# cpu [cores]
    {"full_text":"","color":"\#859900","separator":false,"separator_block_width":6},\
    {"full_text":"${if_match $cpu>70} ‚ñ£ $cpu% [${cpu cpu1}.${cpu cpu2}.${cpu cpu3}.${cpu cpu4}]","color":"\#dc322f"},\
    {"full_text":"${else}"},\
    {"full_text":"${if_match $cpu>40} ‚ñ£ $cpu% [${cpu cpu1}.${cpu cpu2}.${cpu cpu3}.${cpu cpu4}]","color":"\#b58900"},\
    {"full_text":"${else}"},\
    {"full_text":"${if_match $cpu<=40} ‚ñ£ $cpu% [${cpu cpu1}.${cpu cpu2}.${cpu cpu3}.${cpu cpu4}]","color":"\#859900"},\
    {"full_text":"${else}"},\
    {"full_text":"${endif}${endif}${endif}"},\

# space left in root directory
    {"full_text":"","color":"\#859900","separator":false,"separator_block_width":6},\
